<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dorun.mapper.AccountMapper">

    <!-- 이메일 존재 여부 확인 -->
    <select id="isEmailExists" parameterType="string" resultType="boolean">
        select
            count(*)
        from
            account
        where
            email = #{email}
    </select>

    <!-- 회원 등록 -->
    <insert id="insertAccount">
        insert into
            account (name, email, password)
        values
            (#{name}, #{email}, #{password})
    </insert>

    <!-- 이메일로 가져오기 -->
    <select id="findByEmail" resultType="com.dorun.dto.AccountDto">
        select
            name, email, password, role
        from
            account
        where
            email = #{email}
    </select>
</mapper>
